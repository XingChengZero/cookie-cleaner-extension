{
  "manifest_version": 3,
  "name": "缓存清除器 Pro",
  "version": "2.0",
  "description": "全方位检测和清除浏览器缓存：Cookie、LocalStorage、SessionStorage、IndexedDB、Cache Storage等",
  "permissions": [
    "cookies",
    "activeTab",
    "browsingData",
    "storage",
    "scripting",
    "history"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
